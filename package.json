{
  "name": "latteart-repository",
  "version": "1.7.5",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack -w --config webpack.dev.js",
    "test": "jest",
    "package": "yarn package:win & yarn package:mac",
    "package:win": "nexe dist/index.js -o dist/latteart-repository/latteart-repository --target windows-x64-12.18.1",
    "package:mac": "nexe dist/index.js -o dist/latteart-repository/latteart-repository --target macos-x64-12.18.1",
    "prepackage": "yarn prepackage:settings && yarn prepackage:dependencies && yarn build",
    "prepackage:settings": "cpx \"latteart*.config.json\" dist/latteart-repository",
    "prepackage:dependencies": "cpx externals/package.json dist/latteart-repository && cd dist/latteart-repository && yarn install && rimraf package.json && rimraf yarn.lock",
    "lint": "eslint src",
    "fix": "yarn fix:lint && yarn fix:format",
    "fix:lint": "eslint --fix src tests/unit",
    "fix:format": "prettier --write src tests/unit"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.70",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "cpx": "^1.5.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nexe": "3.3.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "typescript-json-validator": "^2.4.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.4.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@types/archiver": "^3.1.1",
    "@types/encoding-japanese": "^1.0.16",
    "@types/express": "^4.17.8",
    "@types/fs-extra": "^9.0.3",
    "@types/log4js": "^2.3.5",
    "@types/moment": "^2.13.0",
    "archiver": "^5.0.2",
    "axios": "^0.20.0",
    "encoding-japanese": "^1.0.30",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "jsdoc-api": "6.0.0",
    "jsdoc-mermaid": "^1.0.0",
    "log4js": "^6.3.0",
    "moment": "^2.29.0",
    "xlsx": "^0.16.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn fix",
      "git add"
    ]
  }
}
